@import '../../../common.styl'

.screenWrapper
  flex 1
  padding 28px

.screen
  position relative
  min-height 100%
  padding 12px
  background white
  coolScrollbar()

.nav
  margin-bottom 12px

.order
  display flex
  align-items center
  justify-content space-between
  padding-bottom 12px
  border-bottom 1px solid $primary-grey

.orderList
  border-bottom 1px solid $primary-grey

.items
  padding-inline-start 1em
  
.emptyTable
  margin-bottom 12px

.delivery
  display flex
  justify-content space-between

.preloader 
  width 50px
  height 50px
  fill $primary

