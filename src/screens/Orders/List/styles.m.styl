@import '../../../common.styl'

.screenWrapper
  flex 1 1
  padding 28px 28px 0
  coolScrollbar()
  overflow auto

.screen
  position relative
  min-height 100%
  min-width 400px
  display flex
  flex-direction column
  background white
  
.table
  flex 1
  padding 12px

.head
  border-bottom: 1px solid $primary-grey

.row
  display grid
  grid-template-columns: 2fr 5fr 5fr 4fr 4fr
  column-gap: 5px
  padding 12px 0

.body
  flex 1 1

.skeleton
  margin 16px 0 32px

.pagination
  display flex
  gap: 12px
  position sticky
  bottom 0
  padding 12px
  background white

.preloader 
  width 50px
  height 50px
  fill $primary
